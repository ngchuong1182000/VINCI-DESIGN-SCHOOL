doctype html
head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css')
    // Font Awesome
    link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css', rel='stylesheet')
    // Google Fonts
    link(href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap', rel='stylesheet')
    // MDB
    link(href='https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.0.0/mdb.min.css', rel='stylesheet')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
    // MDB
    link(rel='stylesheet', href='/css/style.css')
    title= title ? title.toUpperCase() : "VINCI DESIGN SCHOOL"
    link(rel="shortcut icon", href="/image/favicon.ico", type="image/x-icon")
body
    #root
        main
            section.landing__header
                .header
                    nav#navbar(style='position: fixed;')
                        .header__wrapper
                            .header__logo
                                li
                                    a(href='/index')
                                        img(src=' /image/Logo Final-01.png', alt='', width='60%', height='100px')
                                li(style='color: #fff;  font-weight: 700;')
                                    | VINCI DESIGN SCHOOL
                            .header_list
                                li.header_item
                                    a(href='/course/course-offline', style='color: #fff;') Khóa Offline
                                li.header_item
                                    a(href='/course/course-online', style='color: #fff;') Khóa Online
                                li.header_item 
                                    a(href='/document/free', style='color: #fff;') Tài liệu miễn phí
                                li.header_item 
                                    a(href='/contact', style='color: #fff;') Liên hệ
                            .header_user
                                if !user
                                    li.header_item
                                        .flexbox
                                            .search
                                                div
                                                    input(type='text', placeholder='Search . . .', required='')
                                    button.das__nav__btn(type='button')
                                        a(href='/auth/login', style='color: #fff;') ĐĂNG NHẬP
                                else
                                    li.header_item
                                        .flexbox
                                            .search
                                                div
                                                    input(type='text', placeholder='Search . . .', required='')
                                    li.header_item
                                        a#dropdownMenuButton.btn.btn-primarydropdown-toggle(href='#', data-mdb-toggle='dropdown', aria-expanded='false')
                                            .img-border
                                                img(src= user.photo ? user.photo :"/image/favicon.ico"  , width='10px')
                                            .username= user.name ? user.name : user.username
                                        ul.dropdown-menu(aria-labelledby='dropdownMenuButton', style= "min-width:22rem;position: absolute;inset: 0px auto auto 0px;")
                                            a.dropdown-item(href='', disabled)
                                                .image__avatar
                                                    img(src= user.photo,width="50px")
                                                .user__infor
                                                    .user__name()= user.name ? user.name : user.username
                                                    .user__email= user.email
                                            .divider.dropdown-divider
                                            a.dropdown-item(href='/user/myCourse') Khóa Học Của Tôi
                                            a.dropdown-item(href='/user/setting') Cài đạt tài khoản
                                            a.dropdown-item(href='/auth/signout') Đặng Xuất !
            block content

        footer.bg-dark.text-center.text-lg-start.text-light
            .container.p-4
                .row
                    .customer-footer
                        .logo-contact
                            .imageLogo
                                img(src="/image/favicon.ico", alt="", srcset="", width="100")
                            .hotline 
                                i.fas.fa-phone-volume 
                                span      098 7374 741
                            .email-contact
                                i.fas.fa-envelope
                                span      chunguyenchuong2014bg@gmail.com
                            .other-contact 
                                ul 
                                    li 
                                        a.text-light(href='#!')
                                            i.fab.fa-facebook
                                    li 
                                        a.text-light(href='#!')
                                            i.fab.fa-twitter
                                    li 
                                        a.text-light.fab.fa-google-plus-g(href='#!')
                                    li 
                                        a.text-light(href='#!')
                                            i.fab.fa-facebook
                        .company-contact
                            h5.text-uppercase COMPANY
                            ul.list-unstyled.mb-0
                                li
                                    a.text-light(href='#!') About us
                                li
                                    a.text-light(href='#!') Blogs
                                li
                                    a.text-light(href='#!') Contact
                                li
                                    a.text-light(href='#!') Become a Teacher
                        .links-contact
                            h5.text-uppercase LINKS
                            ul.list-unstyled
                                li
                                    a.text-light(href='#!') Course
                                li
                                    a.text-light(href='#!') Events
                                li
                                    a.text-light(href='#!') Gallery
                                li
                                    a.text-light(href='#!') FAQs
                        .support-contact
                            h5.text-uppercase SUPPORT
                            ul.list-unstyled
                                li
                                    a.text-light(href='#!') Documentation
                                li
                                    a.text-light(href='#!') Forums
                                li
                                    a.text-light(href='#!') Language Packs
                                li
                                    a.text-light(href='#!') Release State
            .copy 
