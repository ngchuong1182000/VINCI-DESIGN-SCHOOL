extends ../layout
block content
    .main-content
        section.section
            .section-header
                .section-header-back
                    a.btn.btn-icon(href='#')
                        i.fas.fa-arrow-left
                h1 View Orders Page
                .section-header-breadcrumb
                    .breadcrumb-item.active
                        a(href='#') Dashboard
                    .breadcrumb-item
                        a(href='#') Orders
                    .breadcrumb-item View Orders Page
            .card
                .card-header
                    h4.beep= `Total Order : ${total_order.toLocaleString("it-IT", {style : "currency", currency:"VND"})}`
                    .card-header-form
                        form
                            .input-group
                                input.form-control(type='text', placeholder='Search')
                                .input-group-btn
                                    button.btn.btn-primary
                                        i.fas.fa-search
                .card-body.p-0
                    .table-responsive
                        table.table.table-striped
                            tr
                                th STT
                                th Order ID
                                th User Name
                                th Course Name
                                th Total Order
                                th Action
                            each order, i in orders
                                tr
                                    td= i + 1
                                    td= order._id
                                    td
                                        img.rounded-circle(alt='image', src= `${order.userId.photo}`, width='35', data-toggle='tooltip', title= order.userId.username)
                                    td  
                                        a(href=`/admin/course/${order.courseId.slug}`)= order.courseId.courseName
                                    td
                                        .badge.badge-success= order.total_order.toLocaleString('it-IT', { style: 'currency', currency: 'VND' })
                                    td
                                        a.btn.btn-secondary(href='#') Detail
                            